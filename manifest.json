{
  "manifest_version": 3,
  "name": "Resume Optimizer",
  "version": "1.0.0",
  "description": "Optimize your resume with AI assistance",
  "permissions": [
    "tabs",
    "sidePanel",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://www.indeed.com/*"
  ],
  "action": {
    "default_title": "Open Resume Optimizer"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["pdf.worker.min.js", "keywords.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
